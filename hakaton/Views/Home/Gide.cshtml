        </div>
    </div>

    <form method="post" action="@Href("~/Home/Gide")" id="LogOnForm">
        <input type="hidden" id="page" name="page" value="1" />
        <input type="submit" class="next" value="Previous" style="margin-bottom:20px;font-size: @ViewBag.Mobile;float: left;background: white;color:blue; border-radius: 7px; width: 160px;height:45px;border: 1px solid blue;" />
    </form>
    <br />
