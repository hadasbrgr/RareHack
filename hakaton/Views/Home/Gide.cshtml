@{     
ViewBag.Title = "Gide";
}

@*<h2>Gide</h2>*@

@if (@ViewBag.page == "1")
{

    <div class="well">
        <p align="center" class="main-header" style="font-size: @ViewBag.Header">What are the rules?</p><br /><br /><br />
        <p align="center" class="sub-header" style="font-size: @ViewBag.Mobile">
            There are <u><b>@ViewBag.voters</b></u> boxes and a group of <u><b>@ViewBag.participants</b></u> friends <br />
        </p>

        <p align="center" class="instruction-txt" style="font-size: @ViewBag.Mobile">
            They need to decide which one to get ,they decide to vote in turns.<br /> You are number <u><b>@ViewBag.currentParticipant</b></u>
            You can vote for any number of boxes or even abstain.
        </p><br />
        <p class="sub-header" style="font-size: @ViewBag.Mobile">     

        <div class="progress">
            <div class="progress-bar" role="progressbar" aria-valuenow="10"
                 aria-valuemin="0" aria-valuemax="100" style="width:10%">
                10%
            </div>
        </div>


    </div>
    <form method="post" action="@Href("~/Home/Gide")" id="LogOnForm">
        <input type="hidden" id="page" name="page" value="2" />
        <input type="submit" class="next" value="Next" style="margin-bottom:20px;font-size: @ViewBag.Mobile;float: right;background: white;color:blue; border-radius: 7px; width: 160px;height:45px;border: 1px solid blue;" />
    </form>

    @*<br /><br />
        <div class="progress">
            <div class="progress-bar" role="progressbar" style="width: 45%;"
                 aria-valuenow="45" aria-valuemin="0" aria-valuemax="100">45% Complete</div>
        </div>*@
}
@if (@ViewBag.page == "2")
{
    @*<div class="well">*@
    <p align="center" class="instruction-txt" style="font-size: @ViewBag.Mobile">This is how your screen will look like after starting the game</p><br />
   @* <center><img src="~/Resources/demo1.png" class="img-responsive" style="width: 60%" /></center><br />*@
    <form method="post" action="@Href("~/Home/Gide")" id="LogOnForm">
        <input type="hidden" id="page" name="page" value="3" />
        <input type="submit" class="next" value="Next" style="margin-bottom:20px;font-size: @ViewBag.Mobile;float: right;background: white;color:blue; border-radius: 7px; width: 160px;height:45px;border: 1px solid blue;" />
    </form>

    <div class="progress">
        <div class="progress-bar" role="progressbar" aria-valuenow="70"
             aria-valuemin="0" aria-valuemax="100" style="width:20%">
